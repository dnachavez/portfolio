---
const { title } = Astro.props;
import "../styles/globals.css";
---

<html lang="en" class="dark">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="sitemap" href="/sitemap-index.xml" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <meta
            name="description"
            content="Dan Chavez is an experienced full-stack developer with a focus on back-end development."
        />
        <meta name="author" content="Dan Chavez" />
        <meta
            name="keywords"
            content="Dan Glyde Chavez, Dan Chavez, dnachavez, Full-stack Developer, full-stack, PHP, CodeIgniter, web development, back-end development, front-end development"
        />
        <meta
            property="og:title"
            content="Dan Chavez - Full-Stack Developer"
        />
        <meta property="og:url" content="https://dnachavez.dev/" />
        <meta property="og:image" content="/ogimage.png" />
        <meta
            property="og:description"
            content="Dan Chavez is an experienced full-stack developer with a focus on back-end development."
        />
        <meta property="og:type" content="website" />
        <meta property="og:site_name" content="Dan Chavez - Full-stack Developer" />
        <meta property="og:locale" content="en_US" />
        <link rel="canonical" href="https://dnachavez.dev/" />
        <title>{title}</title>
        <script type="application/ld+json">
            {
                "@context": "https://schema.org",
                "@type": "Person",
                "name": "Dan Chavez",
                "url": "https://dnachavez.dev",
                "sameAs": [
                    "https://www.linkedin.com/in/danachavez",
                    "https://github.com/dnachavez",
                    "https://www.instagram.com/dnachavez",
                    "https://www.tiktok.com/@dnachavez",
                    "https://x.com/dnachavez_dev"
                ],
                "jobTitle": "Full-Stack Developer",
                "worksFor": {
                    "@type": "Organization",
                    "name": "xFusion"
                },
                "alumniOf": {
                    "@type": "CollegeOrUniversity",
                    "name": "University of Southern Philippines Foundation"
                }
            }
            </script>
    </head>
    <body class="bg-light-fondo-primary dark:bg-dark-fondo-primary">
        <slot />
        <script>
            const darkThemeMq = window.matchMedia(
                "(prefers-color-scheme: dark)"
            );
            if (darkThemeMq.matches) {
                document.body.classList.add("dark");
                document.documentElement.classList.add("dark");
            } else {
                document.body.classList.remove("dark");
                document.documentElement.classList.remove("dark");
            }
        </script>
    </body>
</html>
