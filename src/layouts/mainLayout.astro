---
const { title } = Astro.props;
import "../styles/globals.css";
import ChatButton from "../components/ChatButton.astro";
---

<html lang="en" class="dark">
    <head>
        <meta charset="utf-8" />
        <link rel="icon" type="image/svg+xml" href="/favicon.svg" />
        <link rel="sitemap" href="/sitemap-index.xml" />
        <meta name="viewport" content="width=device-width" />
        <meta name="generator" content={Astro.generator} />
        <meta
            name="description"
            content="Dan Chavez is an experienced full-stack engineer and AI engineer with a focus on back-end development."
        />
        <meta name="author" content="Dan Chavez" />
        <meta
            name="keywords"
            content="Dan Glyde Chavez, Dan Chavez, dnachavez, Software Engineer, Full Stack Developer, Full Stack Engineer, Full Stack AI Engineer, Back End Developer, Co-Founder, Project Lead, AI Engineer, AI/ML Engineer, Machine Learning Expert, LLM Engineer, AI Agents, Generative AI, OpenAI, Gemini, Anthropic, PHP, CodeIgniter, Python, JavaScript, TypeScript, HTML, CSS, MySQL, Bootstrap, jQuery, Git, GitHub, Node.js, Next.js, WordPress, VS Code, AWS, GCP, Serverless, Figma, LangChain, Adobe Photoshop, Styled Components, Chrome DevTools, NPM, Netlify, Vercel, Replit, Astro, Canva, Streamlit, cPanel, Web Development, Back End Development, Front End Development, Cloud Computing, API Development, Fullstack Developer Philippines, AI Engineer Philippines, Portfolio"
        />
        <meta
            property="og:title"
            content="Dan Chavez - Full Stack Engineer | AI Engineer"
        />
        <meta property="og:url" content="https://dnachavez.dev/" />
        <meta property="og:image" content="/ogimage.png" />
        <meta
            property="og:description"
            content="Dan Chavez is an experienced full-stack engineer and AI engineer with a focus on back-end development."
        />
        <meta property="og:type" content="website" />
        <meta property="og:site_name" content="Dan Chavez - Full Stack Engineer | AI Engineer" />
        <meta property="og:locale" content="en_US" />
        <link rel="canonical" href="https://dnachavez.dev/" />
        <title>{title}</title>
        <script type="application/ld+json">
            {
                "@context": "https://schema.org",
                "@type": "Person",
                "name": "Dan Chavez",
                "url": "https://dnachavez.dev",
                "sameAs": [
                    "https://www.linkedin.com/in/danachavez",
                    "https://github.com/dnachavez",
                    "https://www.instagram.com/dnachavez",
                    "https://www.tiktok.com/@dnachavez",
                    "https://x.com/dnachavez_dev"
                ],
                "jobTitle": "Full Stack AI Engineer",
                "worksFor": {
                    "@type": "Organization",
                    "name": "xFusion"
                },
                "alumniOf": {
                    "@type": "CollegeOrUniversity",
                    "name": "University of Southern Philippines Foundation"
                }
            }
            </script>
    </head>
    <body class="bg-light-fondo-primary dark:bg-dark-fondo-primary">
        <slot />
        <ChatButton />
        <script>
            const darkThemeMq = window.matchMedia(
                "(prefers-color-scheme: dark)"
            );
            if (darkThemeMq.matches) {
                document.body.classList.add("dark");
                document.documentElement.classList.add("dark");
            } else {
                document.body.classList.remove("dark");
                document.documentElement.classList.remove("dark");
            }
        </script>
    </body>
</html>
